@model Models.Models.Tour

<div class="container">
	<h1 class="text-center">Tour Information : @Model.TourName</h1>
	<div class="row">
		<div class="col-md-6">
			<h2>@Model.TourName</h2>
			<p>@Model.TourShortDescription</p>
		</div>
		<div class="col-md-6">
			<h3>@Model.TourDescription</h3>
			<p>Duration: 7 days</p>
			<p>Max Altitude: 10,000 feet</p>
			<h3>@Model.TourPrice</h3>
			<p>$2,500 per person</p>
			<a href="#" class="btn btn-primary">Book Now</a>
		</div>
	</div>
</div>